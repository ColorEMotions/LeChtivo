<% Article_URL="/article" %>
<% Article_Topic_Icon="img/topics/productivity.png" %>
<% Article_Topic_Name="Продуктивность" %>
<% Article_Topic_URL="/tag/productivity" %>
<% Article_Photo="http://placehold.it/1000x200&text=[img]" %>
<% Article_Photo_Square="http://placehold.it/200x200&text=[img]" %>
<% Article_Author="Ольга Кожар" %>
<% Article_Author_URL="/user/OlgaKojar" %>
<% Article_Date="22.06.2014" %>
<% Article_Date_URL="/date/22.06.2014" %>
<% Article_PageViews="10" %>
<% Article_Title="Не нужно долго думать, пришло время действовать" %>
<% Article_Text="У вас появилась идея нового стартапа и вы долго ее продумываете, вынашиваете, постоянно откладываете реализацию на потом. Все действия аргументируются тем, что лучше «семь раз отмерить и один раз отрезать» и если такой принцип вполне применим к обычной жизни, то для бизнеса он совершенно не подходит." %>   

<!-- Article -->
<br>
<div class="row">
  <article>
    <div class="large-2 columns push-to-front show-for-medium-up">
      <a href="<%= Article_Topic_URL %>" title="Просмотреть все статьи по теме <%= Article_Topic_Name %>"><img src="<%= Article_Topic_Icon %>" class="round-with-border pull-down-30" alt="<%= Article_Topic_Name %>"></a>
    </div>

    <div class="large-9 columns">
      <!-- Article Title -->
      <h3><%= Article_Title %>
        <!-- Share block -->
        <div class="yashare-auto-init right" data-yashareL10n="ru" data-yashareQuickServices="vkontakte,facebook,twitter" data-yashareTheme="counter" data-yashareLink="<%= Article_URL %>" data-yashareTitle="<%= Article_Title %>" data-yashareDescription="<%= Article_Text %>" data-yashareImage="<%= Article_Photo %>"></div>
      </h3>

      <!-- Article info line -->
      <small class="article-info-line">
        <a href="<%= Article_Author_URL %>" class="author" title="Автор: <%= Article_Author %>"><%= Article_Author %></a>
        •
        <a href="<%= Article_Date_URL %>" class="calendar" title="Дата публикации: <%= Article_Date %>"><%= Article_Date %></a>
        •
        <a href="<%= Article_URL %>#disqus_thread" class="comments" title="Просмотреть комментарии"></a>
        •
        <a href="" class="views" title="Просмотров страницы: <%= Article_PageViews %>"><%= Article_PageViews %></a>
      </small>

    </div>

    <!-- Article Main Image -->
    <div class="large-12 columns">
      <img src="<%= Article_Photo %>">
      <br>
      <br>
      
    <!-- Article body text -->
    <% 5.times do %> 
      <p>
        <%= Article_Text %>
      </p>
    <% end %>

    </div>
  </article>

  <!-- TAGS -->
  <div class="large-12 columns">
    <dl class="sub-nav">
      <dt>Метки:</dt>
      <dd class="active"><a href="<%= Article_Topic_URL %>"><%= Article_Topic_Name %></a></dd>
      <dd><a href="<%= Article_Topic_URL %>">Советы</a></dd>
      <dd><a href="<%= Article_Topic_URL %>">GTD</a></dd>
      <dd><a href="<%= Article_Topic_URL %>">LifeHack</a></dd>
      <dd><a href="<%= Article_Topic_URL %>">Присланное</a></dd>
    </dl>

    <!-- Share block -->
    Поделиться с друзьями:
    <div class="yashare-auto-init" style="display: inline-block;" data-yashareL10n="ru" data-yashareQuickServices="vkontakte,facebook,twitter" data-yashareTheme="counter" data-yashareLink="<%= Article_URL %>" data-yashareTitle="<%= Article_Title %>" data-yashareDescription="<%= Article_Text %>" data-yashareImage="<%= Article_Photo %>"></div>
    <br>
  </div>

  <div class="large-12 columns">
    <hr>
  </div>

</div>
<!-- Article End -->


<!-- Sub Post Bar -->
<div class="row">

  <!-- Similar Articles -->
  <div class="large-12 columns">
  <h5 class="text-center">–– ЧИТАЙТЕ ТАКЖЕ ––</h5>
  <br>
  <br>
  </div>
  <% 4.times do %> 
  <div class="large-3 columns">
    <a href="<%= Article_URL %>" class="article-title">
      <div class="image-container proportion-1x1">
        <img src="<%= Article_Photo_Square %>">
      </div>
      <br>
      <%= Article_Title %>
      <br>
    </a>
    
  </div>
  <% end %>
    
  <div class="large-12 columns">
    <hr>
  </div>
</div>

<!-- Comments -->
<div class="row">
  <div class="large-12 columns">
    <div id="disqus_thread"></div>
      <script type="text/javascript">
      /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
