    </form>
    <hr>

    <!-- PROMO BLOCK -->
    <div class="image-container proportion-1x1">
        <a href="promo" title="promo">
          <img src="http://placehold.it/400x400&text=[PROMO]" class="center-block">
        </a>
    </div>
    <br>

    <!-- POPULAR ARTICLES -->
    <br>
    <h5 class="text-center">–– ЛУЧШЕЕ ––</h5>
    <br>
    <% 5.times do %> 
    <a href="<%= Article_URL %>" class="article-title"><%= Article_Title %>
      <small> – <%= Article_Author%>, <%= Article_Date %></small>
    </a>
