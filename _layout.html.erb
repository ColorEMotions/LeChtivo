<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Le Chtivo – это блог о еде и путешествиях, продуктивности, предпринимательстве, мировоззрении, интернете и окружающем нас мире.">
    <meta name="keywords" content="еда, путешествия, предпринимательство, свое дело, продуктивность, советы, lifehack, книги, чтиво, дизайн">
    <link rel="canonical" href="<%= Base_URL %>">
    <title>Le Chtivo | Книги, Места, Еда, Дизайн, Свое Дело, Интересности</title>
    <link rel="stylesheet" href="css/app.css" />
    <link rel="stylesheet" href="css/fontello.css" />
    <script src="bower_components/modernizr/modernizr.js"></script>
  </head>
  <body>
    
   <!-- Header and Nav -->
 
  <div class="row">
    <br>
    <div class="large-12 large-centered columns text-center">
      <h1><a href="<%= Base_URL %>"><img src="/img/logo1_x400.png" alt="Le Chtivo"></a></h1>
    </div>
  </div>

  <div class="row">
  <div class="large-12 large-centered columns text-center">
  <div class="contain-to-grid sticky">
    <nav class="top-bar" data-topbar>
      <ul class="title-area">
        <li class="name"></li>
        <li class="toggle-topbar"><a href="#"><i class="icon-menu" alt="Menu"></i></a></li>
      </ul>

      <section class="top-bar-section center-block">
        <ul>
          <% Menu_Items.each do |Menu_Item| %>
            <li class="cl-effect-2"><a href="<%= Menu_Item[:url] %>">
              <span data-hover="<%= Menu_Item[:name] %>"><%= Menu_Item[:name] %></span>
            </a></li>
          <% end %>
        </ul>
      </section>
    </nav>
  </div>
  </div>
  </div>
 
  <!-- End Header and Nav -->
 

  <!-- Content -->
  <br><br>
  <%= yield %>

 
  <!-- Footer -->
  <footer class="row">
    <div class="large-12 columns">
      <br>
      <hr />
      <br>
      <div class="row">

        <div class="large-6 push-6 columns">
          <ul class="inline-list right">
            <% Menu_Items.each do |Menu_Item| %>
              <li class="cl-effect-2"><a href="<%= Menu_Item[:url] %>">
                  <span data-hover="<%= Menu_Item[:name] %>"><%= Menu_Item[:name] %></span>
              </a></li>
            <% end %>
          </ul>
        </div>

        <div class="large-6 pull-6 columns">
          <p class="cl-effect-2">
            <a href="/about"><span data-hover="О Сайте">О Сайте</span></a>
            <a href="/ads"><span data-hover="Реклама">Реклама</span></a>
            <a href="mailto:info@lechtivo.com"><span data-hover="Info@LeChtivo.com">Info@LeChtivo.com</span></a>
