<% Base_URL="http://lechtivo.com/" %>

<% Menu_Items = Array.new %>
<% Menu_Items.push Hash[:name => "Чтиво", :url => "/tag/readings"] %>
<% Menu_Items.push Hash[:name => "Места", :url => "/tag/places"] %>
<% Menu_Items.push Hash[:name => "Еда", :url => "/tag/food"] %>
<% Menu_Items.push Hash[:name => "Дизайн", :url => "/tag/design"] %>
<% Menu_Items.push Hash[:name => "Свое дело", :url => "/tag/entrepreneurship"] %>
<% Menu_Items.push Hash[:name => "Вне рубрики", :url => "/tag/other"] %>


